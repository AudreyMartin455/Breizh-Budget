<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">


    <TextView
        android:id="@+id/titre"
        android:layout_width="344dp"
        android:layout_height="60dp"
        android:text="Budget_titre"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:gravity="center_horizontal"/>

    <TableLayout
        android:id="@+id/idTable"
        android:layout_width="406dp"
        android:layout_height="434dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre">

        <TableRow

            android:id="@+id/Row1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/titre_budget1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Nom Budget"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView

                android:id="@+id/valeur_budget1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Budget"
                android:textColor="#000"
                android:textSize="14dp" />

            <Button
                android:id="@+id/voir_budget1"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:text="Voir mon budget"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                tools:layout_editor_absoluteY="555dp" />
            <Button
                android:id="@+id/delete_budget1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:text="X"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                tools:layout_editor_absoluteY="555dp" />

        </TableRow>

        <TableRow

            android:id="@+id/Row2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/titre_budget2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Nom Budget"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView

                android:id="@+id/valeur_budget2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Budget"
                android:textColor="#000"
                android:textSize="14dp" />

            <Button
                android:id="@+id/voir_budget2"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:text="Voir mon budget"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                tools:layout_editor_absoluteY="555dp" />

            <Button
                android:id="@+id/delete_budget2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:text="X"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                tools:layout_editor_absoluteY="555dp" />

        </TableRow>

        <TableRow

            android:id="@+id/Row3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/titre_budget3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Nom Budget"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView

                android:id="@+id/valeur_budget3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Budget"
                android:textColor="#000"
                android:textSize="14dp" />

            <Button
                android:id="@+id/voir_budget3"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="Voir mon budget"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                tools:layout_editor_absoluteY="555dp" />

            <Button
                android:id="@+id/delete_budget4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:text="X"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                tools:layout_editor_absoluteY="555dp" />

        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/scannerButton"
        android:layout_width="145dp"
        android:layout_height="54dp"
        android:text="Ajouter un budget"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTable" />

    <Button
        android:id="@+id/button4"
        android:layout_width="145dp"
        android:layout_height="54dp"
        android:layout_marginEnd="32dp"
        android:text="Supprimer un budget"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTable"
        app:layout_constraintVertical_bias="0.503" />


    <Button
        android:id="@+id/button"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:text="Retour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nav_host_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>